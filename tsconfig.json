{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "src/setupTests.ts"],
  "exclude": [
    "deprecated/**/*",
    ".storybook/**/*",
    ".storybook/**/*",
    "stories/**/*",
    "**/*.test.ts",
    "**/*.md",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/__tests__/*"
  ]
}
