{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es2015", "es2016", "es2019"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "tslib": ["path/to/node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": ["src/**/*", "src/setupTests.ts"],
  "exclude": [
    "deprecated/**/*",
    ".storybook/**/*",
    ".storybook/**/*",
    "stories/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/*"
  ]
}
