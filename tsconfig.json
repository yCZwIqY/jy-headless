{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "tslib": [
        "path/to/node_modules/tslib/tslib.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/components/icons/**/*"
  ],
  "exclude": [
    ".storybook/**/*",
    "stories/**/*"
  ]
}
